<script>
    // Función para probar el comando de voz
    function startVoiceTest() {
        const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
        recognition.lang = "es-ES";
        recognition.onresult = function(event) {
            const transcript = event.results[0][0].transcript;
            document.getElementById('voiceOutput').innerText = "Comando de voz detectado: " + transcript;
        };
        recognition.start();
    }

    // Función para subir y procesar un archivo (simulada)
    function uploadFile() {
        const fileInput = document.getElementById('fileInput');
        if (fileInput.files.length > 0) {
            // Aquí iría la lógica para enviar el archivo al backend para interpretación
            document.getElementById('fileOutput').innerText = "Archivo subido y procesado (simulado)";
        } else {
            alert("Por favor, selecciona un archivo primero.");
        }
    }
</script>

